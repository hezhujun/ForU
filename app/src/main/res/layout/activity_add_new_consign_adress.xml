<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_new_consign_adress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.king.foru.view.activity.AddNewConsignAdressActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/left_arrow"
            android:id="@+id/imageView2"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:text="新增收货地址"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:id="@+id/textView6"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            />

        <TextView
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#eeeeee"
        >

        <TextView
            android:text="联系人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            style="@style/forhelp_textview"
            android:text="姓名"
            android:id="@+id/textView10"
            />

        <EditText
            style="@style/forhelp_textedit"
            android:inputType="text|textPersonName"
            android:text="请填写收货人姓名"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <RadioButton
            android:text="先生"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1"

            />

        <RadioButton
            android:text="女士"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            style="@style/forhelp_textview"
            android:text="电话"
            android:id="@+id/textView11"
            />

        <EditText
            style="@style/forhelp_textedit"
            android:inputType="text|textPersonName"
            android:text="请填写收货人电话"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#eeeeee"
        >

        <TextView
            android:text="收货地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            style="@style/forhelp_textview"
            android:text="地址"
            android:id="@+id/textView13"
            />

        <TextView
            style="@style/forhelp_textedit"
            android:inputType="text|textPersonName"
            android:text="选择地址"
            android:ems="10"
            android:id="@+id/textView14"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            style="@style/forhelp_textview"
            android:text="详细地址"
            android:id="@+id/textView15"
            />

        <EditText
            style="@style/forhelp_textedit"
            android:inputType="text|textPersonName"
            android:text="填写详细地址"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
